{
  "compilerOptions": {
    // ECMAScript target version
    "target": "ES2020",
    
    // Module system
    "module": "CommonJS",
    
    // Required libraries
    "lib": [
      "ES2020",
      "DOM"
    ],
    
    // Type checking
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    
    // Module resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    
    // Output configuration
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    
    // JavaScript support
    "allowJs": true,
    "checkJs": false,
    
    // Type definitions
    "types": [
      "jest",
      "node"
    ]
  },
  
  // Files to include/exclude
  "include": [
    "tests/**/*.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}